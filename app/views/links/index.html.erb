<% if flash[:notice] %>
    <div class="toast"><%= flash[:notice] %></div>
<% end %>

<h3>Add a link here!</h3>

<div class="col-6">
  <%= form_for :link, class: "form-group", url: '/links' do |f| %>

    Url: <%= f.text_field :url, class: "form-input" %>
    Title: <%= f.text_field :title, class: "form-input" %>
    <br/>
    <%= f.submit "Submit", class: "btn" %>

  <% end %>
</div>

<div class="col-12">
  <div class="list_of_links">
    <table class="col-4 table table-striped table-hover links-table">
      <thead>
        <tr>
          <th>Title</th>
          <th>URL</th>
          <th>Read (T) or Unread (F)</th>
        </tr>
      </thead>
      <tbody>
        <% @links.each do |link| %>
        <tr class="link", id="<%= link.id %>">
          <td><%= link.title %></td>
          <td><%= link_to link.url, link.url, target: "_blank" %></td>
          <% if read_status(link) %>
            <td class="link"><button class="btn read-status mark-as-read", id="<%= link.title.parameterize %>-switch">Mark as Read (Currently: <%= read_status(link) %>)</button></td>
          <% else %>
            <td class="link"><button class="btn read-status mark-as-read", id="<%= link.title.parameterize %>-switch">Mark as Unread (Currently: <%= read_status(link) %>)</button></td>
          <% end %>
        </tr>
        <% end %>
    </tbody>
    </table>
  </div>  
</div>